<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('/views/header') %>
  <title><%=locals.settings.name%> - <%= i18n('_dict_.reset') %><%= i18n('_dict_.password') %></title>
  <style>
    .container form {
      background-color: white;
      border-radius: 4px;
      padding: 24px;
    }
  </style>
</head>

<body>
  <%- include('/views/menus') %>

  <div class="container category-container" style="max-width: 600px;">

    <form class="mt-5" method="POST">
      <h3><%=locals.settings.name%> - <%= i18n('_dict_.reset') %><%= i18n('_dict_.password') %></h3>
      <hr>

      <div class="mb-2">
        <div>
          <label class="form-label" for="email"><%= i18n('_dict_.email') %></label>
        </div>
        <div>
          <input class="form-control" id="email" name="email" type="email" autocomplete="email" required value="<%=locals.body.email%>">
        </div>
      </div>

      <%- include('./captcha.code.input.ejs') %>

      <div class="w-100 mt-3">
        <button type="submit" class="btn btn-primary w-100"><%= i18n('_dict_.send_reset_email') %></button>
      </div>

      <p class="mt-3">
        <a href="/passport/login"><%= i18n('_dict_.login') %></a>
      </p>

    </form>


    <%- include('/views/components/error.alert.ejs') %>

    <% if(locals.success){  %>
    <div class="alert alert-success mt-3" role="alert">
      <%=locals.success %>
    </div>
    <% } %>
  </div>


  <script>
    function refreshCode() {
      var img = document.querySelector('#code-img');
      img.src = '/passport/code.png?t=' + Date.now()
      console.log(img.src);
    }
  </script>
</body>

</html>