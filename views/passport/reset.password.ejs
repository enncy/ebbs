<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('/views/header') %>
  <title>登录</title>
</head>

<body>
  <%- include('/views/menus') %>

  <div class="container" style="max-width: 600px;">

    <form class="mt-5" method="POST">
      <h3><%=locals.settings.name%> - 重置密码</h3>
      <hr>

      <div class="mb-2">
        <div>
          <label class="form-label" for="email">邮箱</label>
        </div>
        <div>
          <input class="form-control" id="email" name="email" type="email" autocomplete="email" required value="<%=locals.body.email%>">
        </div>
      </div>

      <%- include('./captcha.code.input.ejs') %>

      <div class="w-100 mt-3">
        <button type="submit" class="btn btn-primary w-100">发送重置密码邮箱</button>
      </div>
    </form>

    <p class="mt-3">
      记得密码？
      <a href="/passport/login">登录</a>
    </p>

    <% if(locals.validator_error || locals.error){  %>
    <div class="alert alert-danger mt-3" role="alert">
      <%=locals.validator_error%><%=locals.error%>
    </div>
    <% } %>

    <% if(locals.success){  %>
    <div class="alert alert-success mt-3" role="alert">
      <%=locals.success %>
    </div>
    <% } %>
  </div>


  <script>
    function refreshCode() {
      var img = document.querySelector('#code-img');
      img.src = '/passport/code.png?t=' + Date.now()
      console.log(img.src);
    }
  </script>
</body>

</html>